  <thead>
    <tr>
      <th> <%= t('activerecord.attributes.course.third_option_candidature') %> </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @third_option_candidature.each do |candidature| %>
