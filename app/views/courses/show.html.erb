    <% end %>
  </tbody>
</table>

<% end %>

<% if admin_signed_in? or (user_signed_in? and current_user.super_professor?) %>
  <p>
    <%= link_to 'Editar', edit_course_path(@course) %>
    <%= link_to 'Remover', course_path(@course), method: :delete, data: { confirm: 'Tem certeza?' } %>
  </p>
<% end %>
