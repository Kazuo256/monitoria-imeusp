  <thead>
    <tr>
      <th> <%= t('activerecord.attributes.course.second_option_candidature') %> </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @second_option_candidature.each do |candidature| %>
      <tr>
        <td><%= candidature.student.name %></td>
        <td><%= candidature.student.nusp %></td>
        <td><%= link_to 'Ver candidatura', candidature %></td>
      </tr>
    <% end %>
  </tbody>
</table>

