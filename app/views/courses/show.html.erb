<p>
  <strong><%= t('activerecord.attributes.course.course_code') + ':' %></strong>
  <%= @course.course_code %>
</p>

<p>
<strong><%= t('activerecord.attributes.course.name') + ':' %></strong>
  <%= @course.name %>
</p>

<% if (user_signed_in? && current_user.professor? && current_user.present? && current_user.super_professor?) || secretary_signed_in? %>
<table>
  <thead>
    <tr>
      <th> <%= t('activerecord.attributes.course.first_option_candidature') %> </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @first_option_candidature.each do |candidature| %>
      <tr>
        <td><%= candidature.student.name %></td>
        <td><%= candidature.student.nusp %></td>
        <td><%= link_to 'Ver candidatura', candidature %></td>
      </tr>
    <% end %>
  </tbody>
</table>

