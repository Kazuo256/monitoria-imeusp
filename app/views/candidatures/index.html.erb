<h1>Lista de Candidaturas</h1>


<% @candidatures_filtered.each do |dep, candidatures| %>
  <% if not candidatures.empty? %>
    <h2><%= dep.upcase %></h2>
    <table>
      <thead>
        <tr>
          <th><%= t('activerecord.attributes.student.student') %></th>
          <th><%= t('activerecord.attributes.student.nusp') %></th>
          <th><%= t('activerecord.attributes.candidature.course1_id') %></th>
          <th><%= t('activerecord.attributes.candidature.course2_id') %></th>
          <th><%= t('activerecord.attributes.candidature.course3_id') %></th>
          <th><%= t('activerecord.attributes.candidature.course4_id') %></th>
          <th><%= t('activerecord.attributes.candidature.semester_id') %></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% candidatures.each do |candidature| %>
          <tr>
            <td><%= candidature.student.name %></td>
            <td><%= candidature.student.nusp %></td>
            <td>
              <% course = Course.find(candidature.course1_id) %>
              <%= course.course_code + " - " + course.name %>
            </td>
            <td>
              <% if candidature.course2_id != nil %>
                <% course = Course.find(candidature.course2_id) %>
                <%= course.course_code + " - " + course.name %>
              <% end %>
            </td>
            <td>
              <% if candidature.course3_id != nil %>
                <% course = Course.find(candidature.course3_id) %>
                <%= course.course_code + " - " + course.name %>
              <% end %>
            </td>
            <td>
              <% if candidature.course4_id != nil %>
              <% course = Course.find(candidature.course4_id) %>
              <%= course.course_code + " - " + course.name %>
              <% end %>
            </td>
            <td>
              <%= candidature.semester.period_as_s %>
            </td>
            <td><%= link_to 'Ver', candidature %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% end %>

<br>

<% if student_signed_in? %>
  <% @semesters.each do |semester| %>
    <% if semester[:valid] %>
      <%= link_to "Candidatar-se para #{semester[:get].year}/#{semester[:get].parity_as_i}",
                  new_candidature_path(semester[:get]) %>
    <% end %>
  <% end %>
<% end %>
