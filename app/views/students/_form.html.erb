<%= form_for(@student) do |f| %>


  <% unless @user.nil? %>
    <%= render template: "users/_inner_form" %>
  <% end %>

  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, "erro impediu", "erros impediram") %> esse aluno de ser salvo:</h2>

      <ul>
      <% @student.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <strong><%= f.label :institute, t('activerecord.attributes.student.institute') %></strong><br>
    <% institute_options.each do | option | %>
      <%= f.radio_button :institute, option %>
      <%= f.label option %>
      </br>
    <% end %>
    <%= f.radio_button :institute, "Outros" %>
    <%= f.label "Outros" %>
    <%= f.text_field :institute_text %>
  </div>
  <div class="field">
    <strong><%= f.label :gender, t('activerecord.attributes.student.gender') %></strong><br>
    <% genderOptions.each do | option | %>
      <%= f.radio_button :gender, option[1] %>
      <%= f.label option[0] %>
      </br>
    <% end %>
  </div>
  <div class="field">
    <strong><%= f.label :rg, t('activerecord.attributes.student.rg') %></strong><br>
    <%= f.text_field :rg %>
  </div>
  <div class="field">
    <strong><%= f.label :cpf, t('activerecord.attributes.student.cpf') %></strong><br>
    <%= f.text_field :cpf %>
  </div>
  <div class="field">
    <strong><%= f.label :address, t('activerecord.attributes.student.address') %></strong><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <strong><%= f.label :complement, t('activerecord.attributes.student.complement') %></strong><br>
    <%= f.text_field :complement %>
  </div>
  <div class="field">
    <strong><%= f.label :district, t('activerecord.attributes.student.district') %></strong><br>
    <%= f.text_field :district %>
  </div>
  <div class="field">
    <strong><%= f.label :zipcode, t('activerecord.attributes.student.zipcode') %></strong><br>
    <%= f.text_field :zipcode %>
  </div>
  <div class="field">
    <strong><%= f.label :city, t('activerecord.attributes.student.city') %></strong><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <strong><%= f.label :state, t('activerecord.attributes.student.state') %></strong><br>
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <strong><%= f.label :tel, t('activerecord.attributes.student.tel') %></strong><br>
    <span class="note"><%= t('activerecord.attributes.student.tel_note') %></span><br>
    <%= f.text_field :tel %>
  </div>
  <div class="field">
    <strong><%= f.label :cel, t('activerecord.attributes.student.cel') %></strong><br>
    <span class="note"> <%= t('activerecord.attributes.student.cel_note') %></span><br>
    <%= f.text_field :cel %>
  </div>
 <div class="field">
    <strong><%= f.label :has_bank_account, t('activerecord.attributes.student.has_bank_account') %></strong><br>
    <% yesOrNo.each do | option | %>
      <%= f.radio_button :has_bank_account, option[1] %>
      <%= f.label option[0] %>
      </br>
    <% end %>
  </div>
  <p><strong>
    Será enviado um e-mail de confirmação para completar a ativação da conta.
  </strong></p>
  <p>
    Qualquer dúvida, entre em contato com sistemamonitoria@ime.usp.br.
  </p>
  <div class="field">
    <%= f.submit "Salvar" %>
  </div>
<% end %>
