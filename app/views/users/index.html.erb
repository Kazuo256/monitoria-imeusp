<hr>

<table class="table table-hover">
  <thead>
    <tr>
      <th colspan="5"><%= t('activerecord.attributes.user.user') %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="name"><%= user.name %></td>
        <td><%= "#{user.nusp}" %></td>
        <td>
          <% if user.student? %>
            aluno
          <% end %>
          <% if user.professor? %>
            professor
          <% end %>
        </td>
        <td><%= link_to "Ver perfil", user, class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
