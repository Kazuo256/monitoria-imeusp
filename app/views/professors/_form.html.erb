<%= form_for :professor, url: professors_path do |f| %>
  <p>
    <%= f.label :name, "Nome" %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :nusp, "Número USP" %><br>
    <%= f.text_field :nusp %>
  </p>

  <p>
    <%= f.label :department_id, "Departamento" %><br>
    <%= f.select :department_id, department_options %>
  </p>

  <p>
    <%= f.label :password , "Senha" %><br>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :password_confirmation , "Confirme a senha" %><br>
    <%= f.password_field :password_confirmation %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </p>

  <p>
    <%= f.label :super_professor, "Permissão de SuperProfessor" %><br>
    <%= f.check_box :super_professor %>
  </p>

  <p>
    <%= f.submit "Enviar" %>
  </p>
<% end %>
