
<h2>Dados de professor</h2>

<p>
  <strong><%= t('activerecord.attributes.department.department') + ':' %></strong>
  <%= @professor.department.code %>
</p>

<% if can_promote? %>
  <p>
    <%= button_to "Promover para comissÃ£o de monitoria", controller: "professors", :action => "make_superprofessor", :id => @professor.id, :method => 'post' %>
  </p>
<% end %>
<% if admin_signed_in? %>
  <p>
    <strong><%= t('activerecord.attributes.professor.professor_rank') + ':' %></strong>
    <%= professorRankOptions()[@professor.professor_rank][0] %>
  </p>
  <p>
    <strong><%= t('activerecord.attributes.professor.confirmed_at') + ':' %></strong>
    <%= @professor.confirmed_at ? @professor.confirmed_at : t('activerecord.attributes.professor.unconfirmed') %>
  </p>
  <%= link_to 'Remover', professor_path(@professor), method: :delete, data: { confirm: 'Tem certeza?' } %>
<% end %>
<% if professor_signed_in? and current_professor == @professor %>
  <%= link_to 'Editar', edit_professor_path(@professor) %>
  <%= link_to 'Mudar senha', change_professor_password_path(@professor) %>
<% end %>
