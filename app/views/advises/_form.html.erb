<%= form_for(@advise) do |f| %>
  <% if @advise.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@advise.errors.count, "erro impediu", "erros impediram") %> esse aviso de ser salvo:</h2>

      <ul>
      <% @advise.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, t('activerecord.attributes.advise.title') %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :message, t('activerecord.attributes.advise.message') %><br>
      <%= f.text_area :message, size: "60x12"%>
  </div>
  <div class="field">
    <%= f.label :message, t('activerecord.attributes.advise.urgency') %><br>
    <%= f.check_box :advise_urgency %>
  </div>
  <div class="actions">
    <%= f.submit "Publicar Mensagem." %>
  </div>
<% end %>
